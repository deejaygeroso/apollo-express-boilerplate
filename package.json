{
  "name": "apollo-express-boilerplate",
  "version": "1.6.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p config/typescript/tsconfig.json",
    "dev": "ts-node --project config/typescript/tsconfig.json src/server.ts",
    "lint": "eslint -c config/eslint/.eslintrc.js --ext .ts src",
    "start": "ts-node dist/server.js",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.12.0",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.7",
    "node-fetch": "^2.6.0",
    "psl": "^1.8.0",
    "ts-node": "^8.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.5",
    "@types/jest": "^25.2.1",
    "@types/jsdom": "^16.2.0",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/mongoose": "^5.7.9",
    "@types/node": "^13.11.1",
    "@types/node-fetch": "^2.5.4",
    "@types/psl": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "graphql-voyager": "^1.0.0-rc.28",
    "jest": "^25.3.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
